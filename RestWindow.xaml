<Window x:Class="ProtectMyProstate.RestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtectMyProstate"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#eeeeee"
        Title="该休息了" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Source="prostate-cancer.ico" Width="200" />
            <StackPanel VerticalAlignment="Center" Margin="50">
                <TextBlock FontSize="30" Margin="20" Name="RestTime">休息倒计时：10:00</TextBlock>
                <Button FontSize="20" Width="100" Click="Button_Click">再敲一会</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
